{
    "compilerOptions": {
        "jsx": "react",
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}